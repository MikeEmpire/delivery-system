<p id="notice"><%= notice %></p>
<h1>Your Pragmatic Catalog</h1>
<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= link_to (image_tag product.image), product %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <%= form_tag line_items_path(product_id: product) do %>
            <% if product.category == 'Exclusive' %>
              <%= radio_button_tag(:quantity, "1") %>
              <%= label_tag(:quantity_1_gram, "1 gram / $10") %>
              <%= radio_button_tag(:quantity, "2") %>
              <%= label_tag(:quantity_2_gram, "2 grams / $15") %>
              <%= radio_button_tag(:quantity, "3.5") %>
              <%= label_tag(:quantity_8th_grams, "3.5 grams / $25") %>
              <%= radio_button_tag(:quantity, "4") %>
              <%= label_tag(:quantity_5_grams, "5 grams / $35") %>
              <%= radio_button_tag(:quantity, "6") %>
              <%= label_tag(:quantity_7_grams, "7 grams / $60") %>
              <%= radio_button_tag(:quantity, "14") %>
              <%= label_tag(:quantity_14_grams, "14 grams / $100") %>
              <%= radio_button_tag(:quantity, "28") %>
              <%= label_tag(:quantity_28_grams, "28 grams / $160") %>
              <% else %>
              <%= radio_button_tag(:quantity, "12") %>
              <%= label_tag(:quantity_1_gram, "1 gram / $12") %>
              <%= radio_button_tag(:quantity, "20") %>
              <%= label_tag(:quantity_2_gram, "2 grams / $20") %>
              <%= radio_button_tag(:quantity, "30") %>
              <%= label_tag(:quantity_8th_grams, "3.5 grams / $30") %>
              <%= radio_button_tag(:quantity, "45") %>
              <%= label_tag(:quantity_5_grams, "5 grams / $40") %>
              <%= radio_button_tag(:quantity, "55") %>
              <%= label_tag(:quantity_7_grams, "7 grams / $60") %>
              <%= radio_button_tag(:quantity, "90") %>
              <%= label_tag(:quantity_14_grams, "14 grams / $100") %>
              <%= radio_button_tag(:quantity, "150") %>
              <%= label_tag(:quantity_28_grams, "28 grams / $160") %>
            <% end %>
            <%= submit_tag "Add to cart" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

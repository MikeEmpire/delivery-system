<p id="notice"><%= notice %>
<div id="price-section">
  <h1>Price Chart</h1>
  <div id="pricing-table">
    <div class="plan">
      <h3>Private Reserve<span>$10/G</span></h3>
      <ul>
        <li>$12/1G</li>
        <li>$30/3.5G</li>
        <li>$55/7G</li>
        <li>$100/14G</li>
        <li>$180/28G</li>
      </ul>
    </div>
    <div class="plan">
      <h3>Exclusive<span>$12/G</span></h3>
      <ul>
        <li>$12/1G</li>
        <li>$30/3.5G</li>
        <li>$55/7G</li>
        <li>$100/14G</li>
        <li>$180/28G</li>
      </ul>
    </div>
  </div>
</div>
<div id="exclusive-section">
  <h1>Exclusive Strains</h1>
</div>
<div class="entry">
  <div class="container">
    <div class="row">
      <% cache @exclusive do %>
       <% @exclusive.each do |product| %>
         <% cache product do %>
           <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="col-md-4">
              <%= link_to (image_tag product.image), product %>
            </div>
            <div class="col-md-8">
              <h3><%= product.title %></h3>
              <p><%= sanitize(product.description) %></p>
            </div>
              <div class="col-md-12">
                <%= render 'form', product: product %>
              </div>
           </div>
         <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div id="pr-section">
  <h1>Private Reserve Strains</h1>
</div>
<div class="entry">
  <div class="container">
    <div class="row">
      <% cache @PR do %>
       <% @PR.each do |product| %>
         <% cache product do %>
           <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="col-md-4">
              <%= link_to (image_tag product.image), product %>
            </div>
            <div class="col-md-8">
              <h3><%= product.title %></h3>
              <p><%= sanitize(product.description) %></p>
            </div>
              <div class="col-md-12">
                <%= render 'form', product: product %>
              </div>
           </div>
         <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
